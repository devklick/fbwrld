{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noPropertyAccessFromIndexSignature": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@fbwrld/env-json": ["packages/libs/env-json/src/index.ts"],
      "@fbwrld/feed-poller": ["packages/libs/feed-poller/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
